{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceRoot": "/",
        "target": "es2017",
        "outDir": ".build",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "lib": ["es2017"],
        "rootDir": ".",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "jest.config.js",
        "**/*.spec.ts",
        "**/*.test.ts",
    ]
}